# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/cms_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cms_dev
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Legacy MongoDB (for migration compatibility)
MONGODB_URI=mongodb://localhost:27017/cms

# Redis Configuration
REDIS_URI=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Search Configuration (Elasticsearch)
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_AUTH=
ELASTICSEARCH_INDEX=cms_content

# Logging Configuration
LOG_LEVEL=info
LOG_SILENT=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_MIME_TYPES=image/*,application/pdf,text/*
UPLOAD_DESTINATION=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production
CSRF_ENABLED=true

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100