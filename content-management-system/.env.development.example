# Development Environment Variables
# Copy this file to .env.development for local development

# Application
NODE_ENV=development
PORT=3000
APP_NAME=CMS-API-Dev
APP_VERSION=1.0.0-dev

# Database
DATABASE_URL=postgresql://cms_user:cms_password@localhost:5432/cms_db
DATABASE_SSL=false
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=10000

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Security (Development - NOT for production!)
JWT_SECRET=dev_jwt_secret_change_in_production_32_chars_minimum
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=dev_refresh_secret_change_in_production_32_chars
JWT_REFRESH_EXPIRES_IN=7d

# API Security
API_KEY=dev_api_key_change_in_production
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# Rate Limiting (Relaxed for development)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
RATE_LIMIT_SKIP_SUCCESSFUL=true

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
UPLOAD_DEST=./uploads

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true

# Email (Development - use testing service)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-password

# External Services (Development endpoints)
WEBHOOK_SECRET=dev_webhook_secret
EXTERNAL_API_URL=https://api-staging.external-service.com
EXTERNAL_API_KEY=dev_external_api_key

# Feature Flags (All enabled for development)
ENABLE_GRAPHQL=true
ENABLE_SWAGGER=true
ENABLE_METRICS_ENDPOINT=true
ENABLE_DEBUG_ROUTES=true
ENABLE_RATE_LIMITING=false
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=false

# Performance (Relaxed for development)
NODE_OPTIONS=--max-old-space-size=512
CLUSTER_MODE=false
WORKERS=1

# Session
SESSION_SECRET=dev_session_secret_change_in_production
SESSION_MAX_AGE=86400000

# Caching
CACHE_TTL=60
CACHE_MAX_SIZE=50
CACHE_STRATEGY=lru

# Development specific
HOT_RELOAD=true
AUTO_RESTART=true
WATCH_FILES=true
SOURCE_MAPS=true