# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
PORT=3000
APP_NAME=CMS-API
APP_VERSION=1.0.0

# Database
DATABASE_URL=postgresql://cms_prod_user:CHANGE_THIS_PASSWORD@localhost:5432/cms_production
DATABASE_SSL=true
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=CHANGE_THIS_PASSWORD
REDIS_TTL=3600

# Security
JWT_SECRET=CHANGE_THIS_SUPER_SECRET_JWT_KEY_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET_KEY_AT_LEAST_32_CHARS
JWT_REFRESH_EXPIRES_IN=7d

# API Security
API_KEY=CHANGE_THIS_API_KEY
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESSFUL=true

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DEST=./uploads

# Logging
LOG_LEVEL=warn
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true

# Email (if using email features)
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=CHANGE_THIS_EMAIL_PASSWORD

# External Services
WEBHOOK_SECRET=CHANGE_THIS_WEBHOOK_SECRET
EXTERNAL_API_URL=https://api.external-service.com
EXTERNAL_API_KEY=CHANGE_THIS_EXTERNAL_API_KEY

# Cloud Storage (if using cloud storage)
AWS_ACCESS_KEY_ID=CHANGE_THIS_AWS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_THIS_AWS_SECRET
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-cms-bucket

# Search (if using search features)
ELASTICSEARCH_URL=https://your-elasticsearch-cluster.com
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=CHANGE_THIS_ELASTIC_PASSWORD

# Analytics (if using analytics)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
ANALYTICS_SECRET=CHANGE_THIS_ANALYTICS_SECRET

# Feature Flags
ENABLE_GRAPHQL=true
ENABLE_SWAGGER=false
ENABLE_METRICS_ENDPOINT=true
ENABLE_DEBUG_ROUTES=false
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# Performance
NODE_OPTIONS=--max-old-space-size=1024
CLUSTER_MODE=true
WORKERS=0

# SSL/TLS
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt
SSL_CA_PATH=./ssl/ca.crt

# Session (if using sessions)
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_AT_LEAST_32_CHARS
SESSION_MAX_AGE=86400000

# Caching
CACHE_TTL=300
CACHE_MAX_SIZE=100
CACHE_STRATEGY=lru

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket