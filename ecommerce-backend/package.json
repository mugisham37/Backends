{
  "name": "ecommerce-backend",
  "version": "2.0.0",
  "description": "Modern e-commerce backend with PostgreSQL, Drizzle ORM, and clean architecture",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed-data.ts",
    "db:migrate-from-mongo": "tsx scripts/migrate-from-mongodb.ts",
    "db:reset": "tsx scripts/reset-database.ts",
    "db:setup": "tsx scripts/setup-database.ts",
    "db:studio": "drizzle-kit studio",
    "optimize": "tsx scripts/optimize-performance.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ecommerce",
    "backend",
    "postgresql",
    "drizzle",
    "typescript",
    "graphql",
    "rest-api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@as-integrations/fastify": "^2.1.1",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/redis": "^6.1.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@graphql-tools/schema": "^10.0.25",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^2.4.3",
    "dataloader": "^2.2.3",
    "drizzle-orm": "^0.29.0",
    "fastify": "^4.24.3",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "graphql-subscriptions": "^3.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^6.0.6",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "postgres": "^3.4.7",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.8.10",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.8",
    "@vitest/coverage-v8": "^0.34.6",
    "drizzle-kit": "^0.20.4",
    "supertest": "^7.1.4",
    "tsx": "^4.1.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
